@model SSMessage.ViewModel.ConfirmationViewModel

<link href="~/css/confirmation/confirmation-modal.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        confirmationManager.init("@Model.ConfirmationTypeId");
    });
</script>

<div id="@Model.ConfirmationTypeId" class="confirmation-modal">
    <div id="modalExit" class="modal-exit">
        <div class="modal-exit-content">
            <div class="modal-exit-title">@Model.ConfirmationTypeName</div>
            <div class="modal-exit-desc">@Model.ConfirmationDescription<span id="@String.Format("{0}_box",Model.ConfirmationTypeId)"></span></div>
        </div>
        <div id="modalCancel" class="modal-exit-button">
            Cancel
        </div>
        <div id="modalConfirm" class="modal-exit-button">
            Confirm
        </div>
    </div>
</div>

<script src="~/js/confirmation/confirmation-modal.js"></script>
